{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "ignorePatterns": ["jest.config.ts"]
}
