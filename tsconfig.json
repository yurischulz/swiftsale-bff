{
  "compilerOptions": {
    "baseUrl": "src", // Define "src" como base
    "paths": {
      "~/*": ["*"] // Mapeia "~/" para "src/"
    },
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts"]
}
